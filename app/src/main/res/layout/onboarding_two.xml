<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/theme_color"
    android:gravity="center_horizontal"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:weightSum="2"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/imageTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_weight="1.2"
        android:background="@drawable/onboarding_page_second" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large_xxxx"
            android:src="@drawable/onboarding_cash" />

        <com.steppi.steppifitness.views.STGothamRoundedBookTextView
            android:id="@+id/titleSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium_xxx" />

        <com.steppi.steppifitness.views.STGothamRoundedLightTextView
            android:id="@+id/descriptionSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="32dp"
            android:gravity="center"
            android:text="@string/on_boarding_text_two"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal_xxxx" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/page_indication_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_extra_large"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/indicatorContainerScreen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginEnd="34dp"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/indicatorManScreen2"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_margin="@dimen/margin_small"
                android:src="@drawable/onboarding_man_blue"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/lineContainerScreen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/indicator1Screen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:src="@drawable/onboarding_line" />

                <ImageView
                    android:id="@+id/indicator2Screen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:src="@drawable/onboarding_line"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/indicator3Screen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:src="@drawable/onboarding_line" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
