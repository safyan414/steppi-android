<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin_medium"
    android:background="@drawable/button_solid_theme"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/steppiLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_extra_large"
        android:src="@drawable/steppi_logo"
        android:visibility="gone" />

    <com.steppi.steppifitness.views.STGothamRoundedMediumTextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_extra_large_xxx"
        android:layout_marginEnd="@dimen/margin_extra_large_xxx"
        android:gravity="center"
        android:text="@string/you_are_about_label"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium_x" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.steppi.steppifitness.views.STGothamRoundedBoldTextView
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_normal"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_weight="1"
            android:background="@drawable/button_bg_normal"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium_x" />

        <com.steppi.steppifitness.views.STGothamRoundedBoldTextView
            android:id="@+id/okayBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_normal"
            android:layout_weight="1"
            android:background="@drawable/button_bg_enabled"
            android:gravity="center"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_medium_x" />
    </LinearLayout>
</LinearLayout>