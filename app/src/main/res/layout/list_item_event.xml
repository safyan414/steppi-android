<?xml version="1.0" encoding="utf-8"?>
<com.steppi.steppifitness.views.STSquareView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="72dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_small_item"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="3dp"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_small"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/home_reward_featured" />

    <com.steppi.steppifitness.views.STGothamRoundedMediumTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center"
        android:text="@string/featured"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal_x" />
</com.steppi.steppifitness.views.STSquareView>
