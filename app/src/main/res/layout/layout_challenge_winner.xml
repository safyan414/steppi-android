<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_theme_yellow_stroke_small"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_extra_large">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/win_label_one" />

        <com.steppi.steppifitness.views.STGothamRoundedMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:text="@string/winner"
            android:textAllCaps="true"
            android:textColor="@color/button_lang_bg_enabled_color"
            android:textSize="38sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.steppi.steppifitness.views.STGothamRoundedMediumTextView
            android:id="@+id/pcTwoWinnerTeamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_normal"
            android:paddingEnd="@dimen/margin_normal"
            android:paddingBottom="@dimen/margin_normal"
            android:text="Team Name"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium_xx" />

        <LinearLayout
            android:id="@+id/pcTwoWinnerTeamMembersCountLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:background="@drawable/edit_text_bg_small"
            android:orientation="horizontal"
            android:padding="@dimen/margin_medium"
            android:weightSum="2">

            <com.steppi.steppifitness.views.STGothamRoundedMediumTextView
                android:id="@+id/membersLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/members"
                android:textColor="@color/button_lang_bg_enabled_color"
                android:textSize="@dimen/text_size_normal_xxxx" />

            <com.steppi.steppifitness.views.STGothamRoundedMediumTextView
                android:id="@+id/pcTwoWinnerTeamMembers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="end"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal_xxxx" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_medium"
            android:background="@drawable/edit_text_bg_small"
            android:orientation="horizontal"
            android:padding="@dimen/margin_medium"
            android:weightSum="2">

            <com.steppi.steppifitness.views.STGothamRoundedMediumTextView
                android:id="@+id/totalScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total_score"
                android:textColor="@color/button_lang_bg_enabled_color"
                android:textSize="@dimen/text_size_normal_xxxx" />

            <com.steppi.steppifitness.views.STGothamRoundedMediumTextView
                android:id="@+id/pcTwoWinnerTeamTotalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="end"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal_xxxx" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>