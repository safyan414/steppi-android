<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rewardListCell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_color"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_normal_xx"
    android:paddingEnd="@dimen/margin_normal_xx"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.steppi.steppifitness.views.STGothamRoundedMediumTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sundowner Entry Pass at Laguna Waterpark"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal_xxx" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@drawable/edit_text_bg"
            app:cardBackgroundColor="@color/edit_text_bg_color"
            app:cardCornerRadius="@dimen/margin_small">

            <ImageView
                android:id="@+id/homeRewardBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/edit_text_bg" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:orientation="horizontal"
        android:weightSum="2">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg_light_blue_small"
            android:padding="2dp">

            <LinearLayout
                android:id="@+id/requiredStepsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <com.steppi.steppifitness.views.STGothamRoundedBoldTextView
                    android:id="@+id/requiredSteps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="@dimen/button_height_normal"
                    android:drawableStart="@drawable/home_reward_activity"
                    android:drawablePadding="@dimen/margin_normal"
                    android:gravity="center"
                    android:text="4,000"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_normal_xxx" />

                <com.steppi.steppifitness.views.STGothamRoundedBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="@dimen/button_height_normal"
                    android:gravity="center"
                    android:text="@string/redeem_steps"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_weight="1"
            android:background="@drawable/button_bg_enabled_small"
            android:padding="2dp">

            <LinearLayout
                android:id="@+id/estimateSavingView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <com.steppi.steppifitness.views.STGothamRoundedBoldTextView
                    android:id="@+id/estimateSaving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:height="@dimen/button_height_normal"
                    android:drawableStart="@drawable/total_savings"
                    android:drawablePadding="@dimen/margin_normal"
                    android:gravity="center"
                    android:text="450AED"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_normal_xxx" />

                <com.steppi.steppifitness.views.STGothamRoundedBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:height="@dimen/button_height_normal"
                    android:gravity="center"
                    android:text="@string/aed_saving"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
